function openwin_facebook(name)
{
  var url ='http://www.facebook.com/sharer.php?u='+ window.location.href + '&t='+name;
  window.open(url,null,"width=500,height=510");
}
function openwin_twitter(name, type)
{
  var url =' https://twitter.com/intent/tweet?text='+ name + '&url=' + window.location.href + '&via=' + type;
  window.open(url,null,"width=500,height=510");
}
function openwin_google()
{
  var url ='https://plus.google.com/share?url=' + window.location.href;
  window.open(url,null,"width=500,height=510");
}
function openwin_pinterest(definition,img)
{
  var url ='http://www.pinterest.com/pin/create/button/?url=' + window.location.href + '&description=' + definition + '&media=' + img;
  window.open(url,null,"width=800,height=510");
}

function openwin_email(name)
{
    var url= 'mailto:?subject='+ name + '&body='+ window.location.href ;
    window.location.href = url;
}

